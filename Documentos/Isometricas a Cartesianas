x' = (((x - y) * WIDTHFACTOR + paddingWidth) - offsetX - cameraX) * zoom
y' = (((x + y) * HEIGHTFACTOR / 2 + paddingHeight) - offsetY - cameraY) * zoom

x'/zoom = ((x - y) * WIDTHFACTOR + paddingWidth) - offsetX - cameraX
y'/zoom = ((x + y) * HEIGHTFACTOR / 2 + paddingHeight) - offsetY - cameraY

x'/zoom + offsetX + cameraX = (x - y) * WIDTHFACTOR + paddingWidth
y'/zoom + offsetY + cameraY = (x + y) * HEIGHTFACTOR / 2 + paddingHeight

x'/zoom + offsetX + cameraX - paddingWidth = (x - y) * WIDTHFACTOR
y'/zoom + offsetY + cameraY - paddingHeight = (x + y) * HEIGHTFACTOR / 2

(x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR = x - y
(y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2) = x + y

(1) + (2)
2x = (x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR + (y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2)

x = ((x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR + (y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2)) / 2

De (2)
(y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2) =
          ((x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR + (y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2)) / 2 + y

y = ((y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2) - (x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR) / 2

Entonces:
x = ((x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR + (y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2)) / 2
y = ((y'/zoom + offsetY + cameraY - paddingHeight) / (HEIGHTFACTOR / 2) - (x'/zoom + offsetX + cameraX - paddingWidth) / WIDTHFACTOR) / 2
